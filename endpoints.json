{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api", 
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles. Default order is descending by created at",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "return an object with information for one article",
    "queries": [],
    "exampleResponse": {
      "result": [
        { "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns an object with the comments for the chosen article",
    "queries": [],
    "exampleResponse": {
      "comments": [{
          "comment_id": 8,
          "votes": 0,
          "created_at": "2020-04-14T20:19:00.000Z",
          "author": "icellusedkars",
          "body": "Delicious crackerbreads",
          "article_id": 1
      }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the number of votes an article has based on user input", 
    "queries": [],
    "exampleResponse": {
      "updatedArticle": {
        "article_id": 4,
        "title": "Student SUES Mitch!",
        "topic": "mitch",
        "author": "rogersop",
        "body": "Some body here",
        "created_at": "2020-05-06T01:14:00.000Z",
        "votes": 1,
        "article_img_url":"https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700" 
      }

    }
  },
